---
import {getCollection} from 'astro:content'
import BlogCard from '../../components/BlogCard.astro'
import BaseLayout from '../../layouts/BaseLayout.astro'

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
)
---

<BaseLayout>
    <main class="app-container pt-36">
        <h1 class="text-6xl pb-8 font-bold">Ask China</h1>
        <p class="md:w-2/3 text-lg leading-[2rem]">
            Questions about China? Go to Ask China. Discover a real China with Ask China, a global Q&A community
            connecting you with the experts on China.
        </p>
    </main>
    <section class="app-container py-12">
        <ul class="posts-grid-container">
            {
                posts.map((post) => (
                        <li>
                            <BlogCard post={post}/>
                        </li>
                ))
            }
        </ul>
    </section>
</BaseLayout>
