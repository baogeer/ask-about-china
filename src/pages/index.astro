---
import BaseLayout from '../layouts/BaseLayout.astro'
import BlogCard from '../components/BlogCard.astro'
import {getCollection} from 'astro:content'

const posts = (await getCollection('blog'))
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
---

<BaseLayout>
    <main
            class="app-container flex flex-col gap-12 justify-center py-8 md:py-6 pt-16 md:pt-8 relative"
    >
        <div>
            <p class="block text-2xl opacity-60 mt-9 mb-4">Welcome to</p>
            <h1 class="text-3xl font-bold leading-none">China Expat & Travel Guide</h1>
        </div>
        <p class="text-1xl max-w-4xl font-light leading-normal">
            Your essential guide to living, working, and traveling in China.
        </p>
    </main>

    <section class="app-container">
        <h2 class="section-title">Recent Posts</h2>
        <div class="posts-grid-container">
            {posts.map((post) =>
                    <BlogCard post={post}/>)}
        </div>
    </section>
</BaseLayout>
